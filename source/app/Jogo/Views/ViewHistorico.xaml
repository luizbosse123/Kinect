<UserControl x:Class="Jogo.Views.ViewHistorico"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas>
            <Label Style="{StaticResource LabelTituloHistoricoOperacoes}">OPERAÇÕES REALIZADAS</Label>
            <StackPanel Orientation="Horizontal" Canvas.Top="42">
                <StackPanel Orientation="Vertical" x:Name="ListaOperacoesEsquerda"></StackPanel>
                <StackPanel Orientation="Vertical" x:Name="ListaEstadosEquacao"></StackPanel>
                <StackPanel Orientation="Vertical" x:Name="ListaOperacoesDireita"></StackPanel>
            </StackPanel>
        </Canvas>            
    </Grid>
</UserControl>
